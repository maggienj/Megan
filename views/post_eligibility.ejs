<% include templates/header.ejs %>
<main>
    <article>
        <!-- Header -->
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="intro-text">
                            <span class="name">Supply Applicant Information</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <section>
            <div class="row">
                <div class="col-xs-12">
                    <h2>Input and save applicant information as a filled-out PDF</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 pull-right">
                    <figure>
                        <img class="img img-responsive side-image" style="width:50%; height: 50%;" src="/img/calculator.png">
                    </figure>
                </div>
                <div class="col-xs-12 col-sm-7 pull-left">
                    <p>Please fill in the below info</p>
                    <form action="/pdf" method="POST">
                        <dl>
                            <dt><label for="name">Name</label></dt>
                            <dd><input type="text" id="name" name="name" /></dd>

                            <dt><label for="address">Address</label></dt>
                            <dd><input type="text" id="address" name="address" /></dd>

                            <dt><label for="state">State</label></dt>
                            <dd><input type="text" id="state" name="state" /></dd>

                            <dt><label for="city">City</label></dt>
                            <dd><input type="text" id="city" name="city" /></dd>

                            <dt><label for="zip">Zip</label></dt>
                            <dd><input type="text" id="zip" name="zip" /></dd>

                            <dt><label for="home">Home phone</label></dt>
                            <dd><input type="text" id="home" name="home" /></dd>

                            <dt><label for="work">Work phone</label></dt>
                            <dd><input type="text" id="work" name="work" /></dd>

                            <dt><label for="cell">Cell phone</label></dt>
                            <dd><input type="text" id="cell" name="cell" /></dd>

                            <dt><label for="email">Email</label></dt>
                            <dd><input type="text" id="email" name="email" /></dd>
                        </dl>
                        <% include templates/member.ejs %>
                        <input class="btn btn-princeton" href="./pdf" type="submit" value="Submit Information">
                    </form>
                </div>
            </div>
        </section>
    </main>
  <% include templates/footer.ejs %>
